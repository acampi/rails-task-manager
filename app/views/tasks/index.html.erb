<!-- raw ap @tasks -->

<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= task.title %> | <%= link_to "See details", task_path(task[:id]) %> |
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>


<%= link_to "Add a new task", new_task_path  %>


